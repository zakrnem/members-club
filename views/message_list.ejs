<%- include('./partials/head', {title: title}) %>
  <body>
    <h1><%= title %></h1>
    <% if (!user) { %>
      <a href="club/user/create">Sign up</a>
      <a href="club/user/login">Log in</a>
    <% } else { %>
      <a href="club/user/logout">Log out</a>
      <a href="club/user/join">Join club</a>
      <a href="club/message/create">New message</a>
    <% } %>
    <% if (user) { %>
      <h2>Welcome back <%= user %></h2>
    <% } %>
    <div class="message-list">
      <% let count = 1 %>
      <% message_list.forEach((message) => { %>
        <div class="message">
          <% if(member || admin) { %><strong><%= message.user.fullname %></strong><% } %>
          <p><%= message.message %></p>
          <h5><%= message.date %></h5>
          <% if(admin) { %><a href="<%= message.url %>/delete">Delete message</a><% } %>
        </div>
        <hr>
      <% }) %>
    </div>
  </body>
</html>